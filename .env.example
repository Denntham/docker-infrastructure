# Infrastructure Deployment Environment Variables
# Copy this file to .env and update with your specific values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL Admin Settings
POSTGRES_DB=appdb
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_postgres_password_here

# Application Database Settings
APP_DB_NAME=appdb
APP_USER=appuser
APP_PASSWORD=secure_app_password_here

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=secure_pgadmin_password_here

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================

# MongoDB Admin Settings
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=secure_mongo_password_here
MONGO_INITDB_DATABASE=admin

# Application Database Settings
MONGO_APP_DB=appdb
MONGO_APP_USER=appuser
MONGO_APP_PASSWORD=secure_app_password_here

# Mongo Express Configuration
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=secure_express_password_here
MONGO_EXPRESS_COOKIE_SECRET=secure_cookie_secret_here
MONGO_EXPRESS_SESSION_SECRET=secure_session_secret_here
